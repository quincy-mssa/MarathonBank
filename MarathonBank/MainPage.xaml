<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MarathonBank.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="40,30"
            Spacing="20"
            VerticalOptions="CenterAndExpand">

            <!-- Logo -->
            <Image
                Source="marathon_banner_white.png"
                HeightRequest="150"
                Aspect="AspectFit"
                Margin="0,0,0,10"
                SemanticProperties.Description="Marathon Logo" />

            <!-- Headline -->
            <Label
                Text="THE MARATHON BANK"
                Style="{StaticResource Headline}"
                FontSize="24"
                TextColor="Red"
                FontAttributes="Bold"
                HorizontalTextAlignment="Center"/>

            <!-- Subheadline -->
            <Label
                Text="PREPARE FOR YOUR VICTORY LAP"
                FontSize="16"
                TextColor="Red"
                FontAttributes="Italic"
                HorizontalTextAlignment="Center"/>

            <!-- Entry Fields with Frames -->
            <Frame CornerRadius="10" Padding="10" BackgroundColor="White">
                <Entry
                    x:Name="UsernameEntry"
                    Placeholder="Enter username"
                    TextColor="Black"
                    BackgroundColor="Transparent"/>
            </Frame>

            <Frame CornerRadius="10" Padding="10" BackgroundColor="White">
                <Entry
                    x:Name="PasswordEntry"
                    Placeholder="Enter password"
                    IsPassword="True"
                    TextColor="Black"
                    BackgroundColor="Transparent"/>
            </Frame>

            <!-- Buttons -->
            <Button
                x:Name="LoginBtn"
                Text="Login"
                Clicked="OnLoginClicked"
                BackgroundColor="Red"
                TextColor="White"
                FontSize="18"
                CornerRadius="10"
                HeightRequest="50"
                HorizontalOptions="FillAndExpand" />

            <Button
                x:Name="CreateAccountBtn"
                Text="Create Account"
                Clicked="OnCreateAccountClicked"
                BackgroundColor="Red"
                TextColor="White"
                FontSize="18"
                CornerRadius="10"
                HeightRequest="50"
                HorizontalOptions="FillAndExpand" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
